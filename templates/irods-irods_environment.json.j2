{
    "irods_host": "localhost",
    "irods_port": {{ irods_zone_port }},
    "irods_default_resource": "{{ irods_default_resc }}",
    "irods_home": "/{{ irods_zone_name }}/home/rods",
    "irods_cwd": "/{{ irods_zone_name }}/home/rods",
    "irods_user_name": "{{ irods_admin_user }}",
    "irods_zone_name": "{{ irods_zone_name }}",
    "irods_client_server_negotiation": "request_server_negotiation",
    "irods_client_server_policy": "CS_NEG_REFUSE",
    "irods_encryption_key_size": 32,
    "irods_encryption_salt_size": 8,    
    "irods_encryption_num_hash_rounds": 16,
    "irods_encryption_algorithm": "AES-256-CBC",
    "irods_default_hash_scheme": "SHA256",
{% if irods_ssl_cert_file is defined %}
    "irods_ssl_certificate_chain_file": "{{ irods_ssl_cert_file }}",
{% endif %}
{% if irods_ssl_key_file is defined %}
    "irods_ssl_certificate_key_file": "{{ irods_ssl_key_file }}",
{% endif %}
{% if irods_ssl_dh_params_file is defined %}
    "irods_ssl_dh_params_file": "{{ irods_ssl_dh_params_file }}",
{% endif %}
    "irods_match_hash_policy": "compatible",
    "irods_server_control_plane_port": {{ irods_ctrl_port }},
    "irods_server_control_plane_key": "{{ irods_ctrl_key }}",
    "irods_server_control_plane_encryption_num_hash_rounds": 16,
    "irods_server_control_plane_encryption_algorithm": "AES-256-CBC",
    "irods_maximum_size_for_single_buffer_in_megabytes": 32,
    "irods_default_number_of_transfer_threads": 4,
    "irods_transfer_buffer_size_for_parallel_transfer_in_megabytes": 4
}
